{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "now": {
            "type": "string",
            "defaultValue": "[utcNow('yyyy-MM-ddTHH:00:00Z')]",
            "metadata": {
                "description": "The current date and time"
            }
        },
        "timeZoneOffset": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The time zone offset"
            }
        },
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the automation account"
            }
        }
    },
    "variables": {
        "tags": {},
        "everyHourStartTime": "[dateTimeAdd(parameters('now'), 'PT2H', 'yyyy-MM-ddTHH:00:00Z')]",
        "midnightStartTime": "[concat(dateTimeAdd(parameters('now'), 'P1D', 'yyyy-MM-ddT00:00:00'), parameters('timeZoneOffset'))]",
        "5AmStartTime": "[concat(dateTimeAdd(parameters('now'), 'P1D', 'yyyy-MM-ddT05:00:00'), parameters('timeZoneOffset'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2023-11-01",
            "name": "[parameters('automationAccountName')]",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tags')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "publicNetworkAccess": true,
                "disableLocalAuth": false,
                "sku": {
                    "name": "Basic"
                },
                "encryption": {
                    "keySource": "Microsoft.Automation",
                    "identity": {}
                }
            },
            "resources": [
                {
                    "type": "schedules",
                    "apiVersion": "2023-11-01",
                    "name": "Every Day Midnight",
                    "dependsOn": [
                        "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "startTime": "[variables('midnightStartTime')]",
                        "expiryTime": "9998-12-31T23:59:59Z",
                        "interval": 1,
                        "frequency": "Day",
                        "timeZone": "Australia/Sydney"
                    }
                },
                {
                    "type": "schedules",
                    "apiVersion": "2023-11-01",
                    "name": "Every Day 5AM",
                    "dependsOn": [
                        "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "startTime": "[variables('5AmStartTime')]",
                        "expiryTime": "9998-12-31T23:59:59Z",
                        "interval": 1,
                        "frequency": "Day",
                        "timeZone": "Australia/Sydney"
                    }
                },
                {
                    "type": "runbooks",
                    "apiVersion": "2023-11-01",
                    "name": "ManageSigmaImports",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
                    ],
                    "properties": {
                        "description": "Imports and updates sigma rules as Sentinel analytic rule templates.",
                        "inEdit": "false",
                        "runbookType": "PowerShell",
                        "logProgress": false,
                        "logVerbose": false,
                        "logActivityTrace": 0
                    }
                }
            ]
        }
    ],
    "outputs": {
        "automationAccountName": {
            "type": "string",
            "value": "[parameters('automationAccountName')]"
        }
    }
}